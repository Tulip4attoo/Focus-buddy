{
  "manifest_version": 3,
  "name": "Focus Buddy",
  "version": "1.0",
  "description": "Helps you stay focused by filtering websites based on your tasks",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:1234/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "llmService.js",
    "type": "module"
  }
} 